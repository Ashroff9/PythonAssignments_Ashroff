#Task 1 Factorial using function
i=int(input('Enter a number: '))
def factorial(i):
    if i<2:
        return 1
    else:
        return i * (factorial(i-1))

result = factorial(i)
print('Factorial of', i ,'is: ' ,result)

#Task 2 Math module for calculations
n=int(input('Enter a number: '))
import math
print('Square root: ', math.sqrt(n))
print('Logarithm: ', math.log(n,math.e))
print('Sine: ', math.sin(n))
